<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="412dp"
    android:layout_height="450dp"
    android:background="@drawable/esquinas_redondas_pop_up"
    android:padding="10dp"
    android:layout_gravity="bottom"
    tools:context=".Pop_Up_Eleccion_Metodo_Autentificacion">

    <TextView
        android:id="@+id/text_cerrar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="X"

        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circulo_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imagen_autentificacion"
            android:layout_width="200dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/imagen_autentificacion" />

        <TextView
            android:id="@+id/textView_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metodos de Autentificación"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/textView_frase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor, elija un metodo de autentificación"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            />

        <RadioGroup
            android:id="@+id/radio_group_metodos"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/radioButton_email"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioButton_telefono"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textColor="@color/white" />


        </RadioGroup>

        <TextView
            android:id="@+id/textView_continuar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:padding="2dp"

            android:text="Continuar"
            android:textColor="@color/rojo"
            android:textSize="20dp"

            />
    </LinearLayout>


</LinearLayout>

